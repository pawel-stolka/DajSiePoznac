@model IEnumerable<buenCamino.Models.CaminoModels>

<h4>Camino</h4>

<div class="row">
    <div class="col-md-8">
        <div id="map_canvas" style="height: 400px;"></div>
    </div>

    <div id="startingPoint">
        <input id="pointIndex" type="number" placeholder="0 - 4" min="0" max="4" value="0" />
        <button id="pointEntry" onclick="UpdateCenter()">Enter</button>
    </div>

    <div class="col-md-4">
        <p>Przystanki</p>

        <p>
            <span id="ajax_Id"></span>
            <span id="ajax_PlaceName"></span>
            <span id="ajax_Lat"></span>
            <span id="ajax_Lon"></span>
            <span id="ajax_Transport"></span>
        </p>

        <hr/>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlaceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transport)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlaceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transport)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
       </table>

