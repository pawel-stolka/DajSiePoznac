@model IEnumerable<buenCamino.Models.CaminoModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h3>Index</h3>*@
<p>
    <div id="infoLat">
        Latitude:  <span class="info" id="moveLat"></span>
    </div>
    <div id="infoLon">
        Longitude: <span class="info" id="moveLon"></span>
    </div>
</p>
    




<div class="row">
    <div class="col-md-8">
        <div id="map_canvas" style="height: 400px;"></div>

        <form class="form-inline">

            <div class="form-group">
                <label for="exampleInputEmail2">Place name:</label>
                <input type="text" class="form-control" id="input_PlaceName" placeholder="where are you now?">
            </div>

            <div class="form-group">
                <label for="exampleInputName2">Note</label>
                <input type="text" class="form-control" id="input_Note" placeholder="What's up there?'">
            </div>
            <button type="submit" class="btn btn-default">Send invitation</button>
            <span class="btn btn-default">
                    @Html.ActionLink("Create New..", "Create")
                </span> 

        </form>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @*<input type="button" id="btnCreate" value="Create New.." />*@
                <span class="btn btn-default">
                    @Html.ActionLink("Create New..", "Create")
                </span> 
            </div>
        </div>
        
    </div>

    

    <div class="col-md-4">
        <div class="row">

            <input type="button" id="btnJson" value="Pchnij dżejsona" />

            <input type="button" id="showJson" value="Pokaż dane" />

            <input type="button" id="JsonAlert" value="Wielkość" />

            <div>
                <h4>Latitude:  <span id="posLat"></span></h4>
                <h4>Longitude: <span id="posLon"></span></h4>
            </div>

            <div id="jsonPlace"></div>
        </div>

        <div class="row">
            <table class="table table-hover" id="tablePoints">
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.PlaceName)</th>
                    <th>@Html.DisplayNameFor(model => model.Time)</th>
                    <th>@Html.DisplayNameFor(model => model.Note)</th>
                    <th>@Html.DisplayNameFor(model => model.Transport)</th>
                </tr>
                @{ 
                    int i = 0;
                    string idNumber = "";
                }
                @foreach (var item in Model)
                {
                    i++;
                    if (i < 10)
                    {
                        idNumber = "0" + i;
                    } else
                    {
                        idNumber = "" + i;
                    }

                    string rowId = "checkBox" + idNumber;
                    <tr>
                        <td>
                            @Html.CheckBox("RowCheckBox", false, new { id = rowId })
                            @*<input type="checkbox" id="check" + @i>*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlaceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Transport)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
                
            </table>

        </div>

    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
    <h4></h4>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <section class="scripts">
        
        <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
        <script src="~/Scripts/JsonGMap.js"></script>
        <script src="~/Scripts/GeoArray.js"></script>
        @*<script src="~/Scripts/Maps.js"></script>*@
        
        <script src="~/Scripts/Behaviour.js"></script>
        
        @*<script src="~/Scripts/JSON2.js"></script>
        <script src="~/Scripts/Maps.js"></script>*@
        
    </section>
}        


